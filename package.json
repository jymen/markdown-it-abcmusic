{
  "name": "markdown-it-abcmusic",
  "version": "0.0.8",
  "description": "markdown-it plugin to render :::abc blocks using abcjs SVG",
  "keywords": [
    "markdown-it",
    "abcjs",
    "music",
    "svg"
  ],
  "license": "MIT",
  "author": "Jean-Yves Mengant",
  "scripts": {
    "build": "npm version patch && vite build",
    "dev": "npm run build && vite build --watch",
    "ci": "npm run build && npm run check-format && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "vitest",
    "prepublishOnly": "npm run ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jymen/markdown-it-abcmusic.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "abcjs": "^6.5.2",
    "jsdom": "^27.0.1",
    "markdown-it": "^14.1.0"
  }
}
