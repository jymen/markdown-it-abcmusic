{
  "name": "markdown-it-abcmusic",
  "version": "0.0.4",
  "description": "markdown-it plugin to render :::abc blocks using abcjs SVG",
  "keywords": [
    "markdown-it",
    "abcjs",
    "music",
    "svg"
  ],
  "license": "MIT",
  "author": "Jean-Yves Mengant",
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jymen/markdown-it-abcmusic.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "abcjs": "^6.5.2",
    "jsdom": "^27.0.1",
    "markdown-it": "^14.1.0"
  }
}
